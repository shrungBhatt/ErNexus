<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/list_item_assignment_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/list_item_subject_code_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list_item_assignment_name_textView"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_class_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/list_item_assignment_name_textView"
        android:layout_toRightOf="@id/list_item_subject_code_textView"
        android:padding="4dp"/>


    <TextView
        android:id="@+id/list_item_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/list_item_assignment_name_textView"
        android:padding="4dp"/>

</RelativeLayout>